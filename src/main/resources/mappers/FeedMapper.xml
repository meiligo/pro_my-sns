<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mysns.FeedDAO">

    <insert id="insertFeed" parameterType="com.example.mysns.FeedVO"
            useGeneratedKeys="true" keyProperty="no">
        INSERT INTO feed (content, user_id, created_at)
        VALUES (#{content}, #{userId}, #{createdAt});
    </insert>

    <insert id="insertFeedImg" parameterType="com.example.mysns.FeedImgVO"
            useGeneratedKeys="true" keyProperty="no">
        INSERT INTO feed_img (feed_no, image) VALUES (#{feedNo}, #{image});
    </insert>

    <select id="selectAllFeed" resultType="com.example.mysns.FeedVO">
        SELECT * FROM feed ORDER BY no DESC
    </select>

    <select id="selectFeed" parameterType="int" resultType="com.example.mysns.FeedVO">
        SELECT * FROM feed WHERE no = #{no}
    </select>

    <delete id="deleteFeed" parameterType="int">
        DELETE FROM feed WHERE no = #{no}
    </delete>

    <delete id="deleteFeedImages" parameterType="int">
        DELETE FROM feed_img WHERE feed_no = #{no}
    </delete>

    <select id="selectFeedImgNos" resultType="int">
        SELECT no FROM feed_img WHERE feed_no = #{no}
    </select>

</mapper>
